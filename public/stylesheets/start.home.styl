@import "typography"
@import "layout"
@import "interaction"
@import "modals"
@import "visualizations"

// quick styles for prototyping... I should organize these

.vertical-line
	width 1px
	height 100px
	border-right 1px solid white

.center
	margin 0 auto

.past-visible, .present-visible, .future-visible
	-webkit-transition opacity .3s
	-webkit-transform translate3d(0,0,0)
	opacity 0

.visible
	opacity 1

#timeline

	clearfix()
	width 150%
	// padding 30p

	-webkit-transform translate3d(0,0,0)
	background light-blue
	height 70px

	figure
		margin 0
		height 70px

		svg
			height 70px

			.split
				fill lightest-blue
				opacity .6

			.goal
				stroke-dasharray 10px
				stroke-width 1px
				stroke white

			.past
				stroke-width 2px
				stroke white

			.line
				z-index 30
				stroke-linecap round !important

			.axis.x
				transform translate(0,42px)

				line
					display none

				text
					fill rgba(255,255,255,.5)
					text-transform lowercase
					font-size 11px

			.brush
				fill dark-brown
				stroke-width 2px


	.past-helper, .present-helper, .future-helper
		position absolute
		top 60px
		margin 0
		padding 0
		width 100%

	.present-helper
		-webkit-transform translate3d(16.66666666%,0,0)

		figure
			height 60px
			margin 0
			background blue

			svg
				.line
					stroke white

	.future-helper
		-webkit-transform translate3d(33.33333333%,0,0)

// these styles should probably be done through javascript, but it might be faster to just hardcode them in the CSS instead of waiting for $(document).ready?

#grid-container
	z-index 0
	// padding-top 60px
	-webkit-transform translate3d(0,0,0)

.overview
	-webkit-transform translate3d(100%,0,0)

.goal-view
	-webkit-transform translate3d(200%,0,0)

.future-controls
	position absolute
	top 0
	right 0
	width 300px
	padding 15px

	background white
	border-left 1px solid dark-brown