	-webkit-font-smoothing antialiased

// icons
@import "entypo"
entypo-define('Entypo', '/fonts/entypo', 'entypo')
i[class*="entypo"]
	font-style normal

// CUSTOM STUFF
// modules
@import "variables"
@import "buttons" 
@import "typography"
@import "layout"
@import "interaction"
@import "modals"
@import "visualizations"

// quick styles for prototyping... I should organize these

body
	background off-white

.vertical-line
	width 1px
	height 100px
	border-right 1px solid white

.center
	margin 0 auto

.past-visible, .present-visible, .future-visible
	-webkit-transition opacity .3s
	-webkit-transform translate3d(0,0,0)
	opacity 0

.visible
	opacity 1

#timeline
	position absolute

	clearfix()
	width 150%
	// padding 30p

	-webkit-transform translate3d(0,0,0)
	background light-blue
	height 70px
	border-bottom 4px solid blue

	figure
		margin 0
		height 70px

		svg
			height 70px

			.split
				fill lighten(light-blue, 20%)

			.goal
				stroke-dasharray 5px
				stroke-width 1px
				stroke white

			.past
				stroke-width 2px
				stroke white

			.line
				z-index 30
				stroke-linecap round !important

			.axis.x
				transform translate(0,42px)

				line
					display none

				text
					fill rgba(255,255,255,.5)
					text-transform lowercase
					font-size 11px

			.brush
				fill blue
				stroke-width 2px


	.past-helper, .present-helper, .future-helper
		position absolute
		top 60px
		margin 0
		padding 0
		width 100%

	.present-helper
		-webkit-transform translate3d(16.66666666%,0,0)

		figure
			height 60px
			margin 0
			background blue

			svg
				.line
					stroke white

	.future-helper
		-webkit-transform translate3d(33.33333333%,0,0)

// these styles should probably be done through javascript, but it might be faster to just hardcode them in the CSS instead of waiting for $(document).ready?

#grid-container
	z-index 0
	padding-top 70px
	-webkit-transform translate3d(0,0,0)

.overview
	-webkit-transform translate3d(100%,0,0)

.goal-view
	-webkit-transform translate3d(200%,0,0)

.side-module
	position absolute
	top 15px
	right 15px
	bottom 15 + 70px
	width 300px

	overflow scroll

	padding 20px 0 0 0

	background lighten(off-white, 40%)
	border 1px solid darken(lightest-gray, 10%)
	border-radius 3px

	color darkest-blue

	p
		padding 0 15px

	h1, h2, h3, h4, h5
		padding 10px 15px
		background lightest-gray

.commitments
	margin 0
	
	li
		padding 15px

		border-bottom 1px solid lightest-gray

		.direction
			position relative
			top 5px
			font-size 40px
			line-height 10px
			margin-right 5px

			color red

		.controls
			display inline-block
			float right
			margin-top -10px

			.button
				height 40px
				width 40px
				line-height 32px

		.empty-check
			height 16px
			width 16px
			float left
			// background #fff
			border-radius 3px
			margin-right 5px
			box-shadow inset 0px 1px 1px rgba(0,0,0,.2)

		&:last-of-type
			border none

.instructions
	color gray