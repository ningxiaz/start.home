
// quick styles for prototyping... I should organize these

body
	background off-white

.vertical-line
	width 1px
	height 100px
	border-right 1px solid white

.center
	margin 0 auto

.past-visible, .present-visible, .future-visible
	-webkit-transition opacity .3s
	-webkit-transform translate3d(0,0,0)
	opacity 0

.visible
	opacity 1


	.past-helper, .present-helper, .future-helper
		position absolute
		top 60px
		margin 0
		padding 0
		width 100%

	.present-helper
		-webkit-transform translate3d(16.66666666%,0,0)

		figure
			height 60px
			margin 0
			background blue

			svg
				.line
					stroke white

	.future-helper
		-webkit-transform translate3d(33.33333333%,0,0)

.side-module
	position absolute
	top 15px
	right 15px
	bottom 15 + 70px
	width 300px

	overflow scroll

	padding 20px 0 0 0

	background lighten(off-white, 40%)
	border 1px solid darken(lightest-gray, 10%)
	border-radius 3px

	color darkest-blue

	p
		padding 0 15px

	h1, h2, h3, h4, h5
		padding 10px 15px
		background lightest-gray

.commitments
	margin 0
	
	li
		padding 15px

		border-bottom 1px solid lightest-gray

		.direction
			position relative
			top 5px
			font-size 40px
			line-height 10px
			margin-right 5px

			color red

		.controls
			display inline-block
			float right
			margin-top -10px

			.button
				height 40px
				width 40px
				line-height 32px

		.empty-check
			height 16px
			width 16px
			float left
			// background #fff
			border-radius 3px
			margin-right 5px
			box-shadow inset 0px 1px 1px rgba(0,0,0,.2)

		&:last-of-type
			border none

.instructions
	color gray