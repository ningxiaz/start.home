.vis
	text-align center

.ambient
	margin 0
	width 100%
	background white
	z-index 20

.context
	background light-blue
	border-radius 3px
	width 1024px !important
	margin 0 auto

.line
	stroke white

.axis path, .axis line
	fill none
	stroke #000
	shape-rendering crispEdges


.x.axis path
	display none


.line
	fill none
	stroke steelblue
	stroke-width 1.5px


	.brush .extent
		stroke #fff
		fill lighten(green,20%)
		shape-rendering crispEdges

#clock
	width 768
	margin 0 auto

.area
	fill #ffbb78
	opacity 0.5


.line
	fill none
	stroke #e6550d
	stroke-width 1px

.in_area
	fill #a1d99b
	opacity 0.8

.in_line
	fill none
	stroke #31a354
	stroke-width 1px

.min_line
	stroke #e377c2
	stroke-width 1.5px
	stroke-dasharray 3px
	fill none

.max_line
	stroke #e6550d
	stroke-width 1.5px
	stroke-dasharray 3px
	fill none

.daytime_arc
	fill yellow
	stroke none
	opacity 0.7

.coordinates
	stroke #ccc

