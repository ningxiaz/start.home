.goal-view p .electric-text, .goal-view p .water-text
	font-weight 700

.goal-view .panel-side
	bottom body-padding

.progress-state
	position absolute
	bottom 0

	float left
	padding padding-base-horizontal
	width 100%

	.save
		float right

	.cancel
		float left

