
// components/panels/goal-panel.styl
//----------------------------------
// Implementation styles for the goal-setting panel

// Behavior suggestions
//-------------------------------

.goal-view p .electric-text, .goal-view p .water-text
	font-weight 700

.goal-view .panel-side
	bottom body-padding

.progress-state
	position absolute
	bottom 0

	float left
	padding padding-base-horizontal
	width 100%

	.save
		float right

	.cancel
		float left

.slider-container
	height 200px
	padding padding-base

	.slider
		float left
		width 50%
		text-align center

	.electric
		color darken(yellow, 30%)

	.water
		color blue

.goal_inputs
	padding padding-base
	input
		-webkit-appearance none
		outline none
		width 100%
		padding padding-base

		border 1px solid darken(white, 10%)
		border-radius border-radius-base

		&+input
			margin-top 10px

.height-fix
	position relative

.behavior-suggestions
	list-style-type none

	overflow scroll
	position relative

	margin 0
	padding 0

	li
		padding padding-base-horizontal padding-large-vertical

		&+ li
			border-top 1px solid darken(white, 10%)

		a
			margin-right padding-base-horizontal

		&.selected
			color gray

		.impact
			float right
			margin-top 4px

			font-size 12px
			color gray

.projections
	clearfix()
	width 100%

	.projection
		clearfix()
		float left
		width 50%

		padding padding-base

		i
			float left
			font-size 40px
			line-height line-height-computed
			margin-top -4px
		
		.amount
			line-height line-height-computed
			float right
