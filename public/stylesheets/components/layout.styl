// Layout.styl
// -----------
// Styles that determine the position and size of things on the screen.

*
	box-sizing border-box // border-box ftw!

body, html
	width 100%
	height 100%
	overflow hidden

.scroll-wrap
	width 100%
	height 100%
	position relative
	overflow hidden

#grid-container
	width 100%
	height 100%

#control-shortcuts
	z-index 100 // place them on top always
	height button-height

	ul li
		display inline-block
		margin-right 10px // spacing between control buttons

		&:last-of-type
			margin 0 // don't need spacing on last one

.pane
	position absolute
	width 100%
	height 100%

	padding all-margins

.vis
	position absolute
	top 0
	left 0
	bottom 0
	right 0


// little arrow hints for swiping/scrolling/panning/etc.
.hint-right, .hint-left
	position absolute
	top 50% // gets it almost center
	margin-top -1*button-circle-diameter * .5 // pops it back up to center

.hint-right
	right right-margin

.hint-left
	left left-margin

.hint-up, .hint-down
	position absolute
	left 50%
	margin-left -1*button-circle-diameter * .5 // pops it back up to center

.hint-up
	top top-margin

.hint-down
	bottom bottom-margin

.bottom-right
	position absolute
	right right-margin
	bottom bottom-margin

	div
		float left
		margin-right 15px

.bottom-left
	position absolute
	bottom bottom-margin
	left left-margin

// Helper classes
.left
	float left

.right
	float right

// Responsive media query because I don't want to rule out an iPhone interface yet
// Except everything looks like crap on the iPhone at this point, so this is pointless
@media screen and (max-width: 650px)
	html
		font-size: 80%;
