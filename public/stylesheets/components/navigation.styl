// Navigation
//-------------------------------

.navigation
	ul
		margin 0
		padding 0
		list-style-type none

		li
			display inline

			&+li
				margin-left padding-base-horizontal

// Implementations
//-------------------------------

.shortcuts
	@extends .navigation

	position absolute
	bottom body-padding
	left body-padding

	z-index 200

.vis-types
	@extends .navigation

	position absolute
	bottom body-padding
	right body-padding