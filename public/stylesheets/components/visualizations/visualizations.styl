.vis
	text-align center

.ambient
	margin 0
	width 100%
	background white
	z-index 20

.context
	background light-blue
	border-radius 3px
	width 1024px !important
	margin 0 auto

.line
	stroke white

.axis path, .axis line
	fill none
	stroke #000
	shape-rendering crispEdges


.x.axis path
	display none


.line
	fill none
	stroke steelblue
	stroke-width 1.5px


	.brush .extent
		stroke #fff
		fill lighten(green,20%)
		shape-rendering crispEdges

#clock
	width 768
	margin 0 auto

.area
	fill lighten(blue, 40%)
	// opacity 0.5


.line
	fill none
	stroke blue
	// stroke-width 1px

.in_area
	fill lighten(blue, 10%)
	opacity 0.8

.in_line
	fill none
	stroke blue
	stroke-width 1px

.min_line
	stroke white
	stroke-dasharray 5px
	stroke-width 1px
	fill none

.max_line
	stroke red
	stroke-dasharray 5px
	stroke-width 1px
	fill none

.daytime_arc
	fill yellow
	stroke-width 3px
	stroke yellow
	stroke-linejoin round

.nighttime_arc
	fill dark-blue
	stroke-width 3px
	stroke dark-blue
	stroke-linejoin round

.coordinates
	stroke darken(lightest-gray, 10%)

.now
	stroke blue
	stroke-width 2px
	stroke-linecap round