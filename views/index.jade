doctype 5
html
	head
		title= title

		//- Stylesheets
		link(rel='stylesheet', href='stylesheets/start.home.css')

		//- Javascript libraries
		script(type='text/javascript', src='javascripts/lib/d3.v3.min.js')
		script(type='text/javascript', src='javascripts/lib/jquery.min.js')
		script(type='text/javascript', src='javascripts/lib/jquery.hammer.js')	
		script(type='text/javascript', src='https://rawgithub.com/timrwood/moment/2.1.0/min/moment.min.js')	

		//- Our Javascript (there's a lot of it...)
		script(type='text/javascript', src='javascripts/segue.js')
		script(type='text/javascript', src='javascripts/clock.js')
		script(type='text/javascript', src='javascripts/clock_water.js')
		script(type='text/javascript', src='javascripts/timeline-brush.js')
		script(type='text/javascript', src='javascripts/data-manager.js')
		script(type='text/javascript', src='javascripts/random_data.js')
		script(type='text/javascript', src='javascripts/index.js')

		//- Meta tags
		meta(name="viewport", content="width=device-width,initial-scale=1,user-scalable=no")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black")
	body
		section#idle-screen
			#clock

		//- Navigation
		nav.fixed.bottom-left
			ul.circle-buttons
				li: a(href="#").button: i.entypo-list
				li: a(href="#").button: i.entypo-light-bulb
				li: a(href="#").button: i.entypo-thermometer 

		div#timeline
			figure
				svg


		div#grid-container
			section.overview.pane
				//- Some buttons!
				a(href="#")#past.button Past
				a(href="#")#past.button-large.button-info Future
				a(href="#")#past.button-circle.button-warning: i.entypo-list
				a(href="#")#past.button-circle-large.button-danger: i.entypo-user

				.main
					//- #clock
					#floorplan

			section.past-view.pane
				h1 Past
				figure.line-graph

			section.goal-view.pane
				figure.line-graph
				section.future-controls.side-module
					menu.control-mode
						a(href="#") Goals
						a(href="#") HVAC
					//- HVAC Controls
					//- Goal Controls
					p.instructions Adjust your end-of-year goals by dragging the lines on the left.
					h3 Selected actions
					ul.commitments
						li
							| Showers 20% (2 minutes)
						li Eat 4% less cereal
						li Watch 
